#!/usr/bin/env bash

if [ $# -ne 1 ]; then
	echo "Generate random paragraphs with a width of 75 characters."
	echo "Usage: ipsum <lines>"
	exit 1
fi

tr -dc a-z1-4 </dev/urandom 		\
	| tr 1-2 ' \n' 			\
	| awk 'length==0 || length>50' 	\
	| tr 3-4 ' ' 			\
	| sed 's/^ *//' 		\
	| cat -s 			\
	| fmt 				\
	| head -n $1
